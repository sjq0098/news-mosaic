# 新闻搜索服务环境配置示例
# 复制此文件为 .env 并填入真实的配置值

# ================================
# 应用基础配置
# ================================
APP_NAME=news-mosaic
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here

# ================================
# API服务配置
# ================================
HOST=0.0.0.0
PORT=8000

# ================================
# 数据库配置
# ================================
# MongoDB配置（必需）
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=news_mosaic

# MySQL配置（可选）
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=news_mosaic

# ================================
# 新闻搜索API配置（必需）
# ================================
# SerpAPI密钥 - 用于Google新闻搜索
# 获取地址: https://serpapi.com/
SERPAPI_KEY=0f58593084c517757fe22bb0d99fa03cb29af6d0cedcd2085530efd55dc5a533
SERPAPI_API_KEY=0f58593084c517757fe22bb0d99fa03cb29af6d0cedcd2085530efd55dc5a533

# Bing搜索API密钥（可选，备用搜索源）
# 获取地址: https://azure.microsoft.com/en-us/services/cognitive-services/bing-news-search-api/
BING_SEARCH_API_KEY=

# ================================
# LLM API配置（用于后续功能）
# ================================
# 通义千问API
QWEN_API_KEY=
QWEN_BASE_URL=https://dashscope.aliyuncs.com/api/v1
QWEN_MODEL=qwen-turbo

# DeepSeek API
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# OpenAI API
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# ================================
# Redis配置（用于缓存）
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# ================================
# 向量数据库配置（用于后续功能）
# ================================
# Pinecone配置
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=news-embeddings

# Weaviate配置
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# ================================
# 模型配置
# ================================
# 嵌入模型
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# 情感分析模型
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest

# ================================
# 缓存配置
# ================================
CACHE_TTL=3600
NEWS_CACHE_TTL=1800

# ================================
# 定时任务配置
# ================================
NEWS_FETCH_INTERVAL=300
NEWS_CLEANUP_INTERVAL=86400

# ================================
# 日志配置
# ================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ================================
# 安全配置
# ================================
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================
# 限流配置
# ================================
RATE_LIMIT_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=10
